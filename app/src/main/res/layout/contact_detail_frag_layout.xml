<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtFullNameDetailView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:gravity="bottom"
            android:padding="15sp"
            android:text="Muhammad Awais Dilber - 119"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:padding="15sp">

                    <TextView
                        android:id="@+id/txtMobileText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile" />

                    <TextView
                        android:id="@+id/txtMobileDetailView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0300 4384961"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/imgCallMobileDetailView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <ImageButton
                        android:id="@+id/imgCallMobile"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/call64" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/imgMsgMobileDetailView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <ImageButton
                        android:id="@+id/imgMsgMobile"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/msg64" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="15sp">

                    <TextView
                        android:id="@+id/txtEmergencyContactNumberText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Emergency Contact Number" />

                    <TextView
                        android:id="@+id/txtEmergencyContactNumberDetailView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0322 8016951"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <ImageButton
                        android:id="@+id/imgCallEMRMobile"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/call64" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="15sp">

                    <TextView
                        android:id="@+id/txPersonalEmailText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Personal Email" />

                    <TextView
                        android:id="@+id/txttxPersonalEmailDetailView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="awaisdilber@gmail.com"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <!--<ImageView-->
                        <!--android:layout_width="24dp"-->
                        <!--android:layout_height="24dp"-->
                        <!--android:background="@drawable/email64" />-->
                    <ImageButton
                        android:id="@+id/imgEmailPersonal"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/email64" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15sp">

                    <TextView
                        android:id="@+id/txDesignationText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Designation" />

                    <TextView
                        android:id="@+id/txDesignationDetailView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="IT Programmer Analyst II"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15sp">

                    <TextView
                        android:id="@+id/txDepartmentText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Department" />

                    <TextView
                        android:id="@+id/txDepartmentDetailView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Software Development"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15sp">

                    <TextView
                        android:id="@+id/txManagerText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reporting Manager" />

                    <TextView
                        android:id="@+id/txManagerDetailView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nadeem Ahmed"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>